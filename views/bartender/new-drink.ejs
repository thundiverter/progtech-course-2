<h4>Новый напиток</h4>

<div id="error" data-error="name" class="alert alert-warning my-2">
    Напиток уже существует
</div>

<form method="post" action="/new-drink">
    <div class="my-3">
        <label for="username">Название</label>
        <input class="form-control" type="text" name="name" id="name" required>
    </div>
    <div class="my-3">
        <label for="price">Стоимость за шт.</label>

        <div class="input-group">
            <input class="form-control" type="number" name="price" id="price" step=".01" required>
            <span class="input-group-text">₽</span>
        </div>
    </div>
    <div class="my-3">
        <label for="components">Состав</label>
        <textarea class="form-control w-100" name="components" id="components" required></textarea>
    </div>
 
    <div class="d-flex gap-2 my-4">
        <button class="btn btn-primary w-50" type="submit">Добавить</button>
        <a href="/" class="btn btn-outline-primary w-50">Назад</a>
    </div>
</form>